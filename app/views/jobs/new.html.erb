<%= form_for @job do |f| %>

  <%= f.label :description,'details'  %>
  <%= f.text_field :description %>

  <%= f.label :start_time,'Start'  %>
  <%= f.datetime_field :start_time %>

  <%= f.label :end_time,'Stop'  %>
  <%= f.datetime_field :end_time %>

  <%= f.label :project_id,'Project'  %>
  <%= f.select :project_id, Project.pluck(:description, :id) %>




  <%= f.submit "Start project" %>
  <%= f.submit "Stop project" %>

<% end %>
